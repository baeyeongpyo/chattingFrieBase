<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/firebase_wirte_edit"
        android:layout_width="0dp"
        android:layout_height="@dimen/default_height_size"
        android:ems="10"
        android:inputType="textPersonName"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/firebase_wirte_button"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/firebase_wirte_button"
        android:layout_width="@dimen/send_button_size"
        android:layout_height="@dimen/default_height_size"
        android:text="@string/sendButton"
        app:layout_constraintStart_toEndOf="@id/firebase_wirte_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</android.support.constraint.ConstraintLayout>